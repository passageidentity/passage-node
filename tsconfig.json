{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "lib/esm",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true
  },
  "exclude": [
    "lib",
    "node_modules",
    "**/*.spec.ts"
  ]
}
